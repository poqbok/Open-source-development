    <script>
        const images = [
            'https://static.clubs.nfl.com/image/upload/t_editorial_landscape_12_desktop/eagles/rwrumaozj707g6roh0gj',
            'https://static.clubs.nfl.com/image/upload/t_editorial_landscape_12_desktop/eagles/g9sjl0yeqhb8qme2xnh8',
            'https://i.namu.wiki/i/FfgYGbUEHcdG2oU_sIuoF0pJRvhHdfqnlV3HO_ZMZT99ARsX6SetpE3Gi2U_WtfIPFy5AoZWT2yQFU8A_62wPg.webp'
        ];

        let currentIndex = 0;
        const heroSection = document.getElementById('hero');

        function changeBackgroundImage() {
            currentIndex = (currentIndex + 1) % images.length;
            heroSection.style.backgroundImage = `linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('${images[currentIndex]}')`;
        }

        setInterval(changeBackgroundImage, 5000);
    </script>

